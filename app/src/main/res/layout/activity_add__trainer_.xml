<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.Add_Trainer_Activity"
    android:orientation="vertical"
    android:background="@drawable/admin_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        tools:ignore="UselessParent"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Id : "
            android:textColor="@color/white"
            android:layout_marginLeft="50dp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <EditText
            android:id="@+id/EditTrainerEmailId"
            android:textAlignment="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37dp"
            tools:ignore="HardcodedText,RtlHardcoded,TextFields"
            android:hint="Enter Email Id"
            android:importantForAutofill="no"
            android:background="@drawable/rounded_edittext"
            android:gravity="center_horizontal" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        tools:ignore="UselessParent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact :"
            android:textColor="@color/white"
            android:layout_marginLeft="50dp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <EditText
            android:id="@+id/EditTrainerContact"
            android:textAlignment="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44dp"
            tools:ignore="HardcodedText,RtlHardcoded,TextFields"
            android:hint="Enter Contact"
            android:importantForAutofill="no"
            android:background="@drawable/rounded_edittext"
            android:gravity="center_horizontal"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        tools:ignore="UselessParent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Last Name : "
            android:textColor="@color/white"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <EditText
            android:id="@+id/EditTrainerLastName"
            android:gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            tools:ignore="HardcodedText,RtlHardcoded,TextFields"
            android:hint="Enter Last Name"
            android:importantForAutofill="no"
            android:background="@drawable/rounded_edittext"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        tools:ignore="UselessParent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name : "
            android:textColor="@color/white"
            android:layout_marginLeft="50dp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <EditText
            android:id="@+id/EditTrainerFirstName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            tools:ignore="HardcodedText,RtlHardcoded,TextFields"
            android:hint="Enter First Name"
            android:background="@drawable/rounded_edittext"
            android:importantForAutofill="no"
            android:gravity="center_horizontal"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        tools:ignore="UselessParent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Experience : "
            android:textColor="@color/white"
            android:layout_marginLeft="45dp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <EditText
            android:id="@+id/EditTrainerExperience"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            tools:ignore="HardcodedText,RtlHardcoded,TextFields"
            android:hint="Enter Experience"
            android:importantForAutofill="no"
            android:gravity="center_horizontal"

            android:background="@drawable/rounded_edittext"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        tools:ignore="UselessParent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight : "
            android:textColor="@color/white"
            android:layout_marginLeft="45dp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <EditText
            android:id="@+id/EditTrainerWeight"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            tools:ignore="HardcodedText,RtlHardcoded,TextFields"
            android:hint="Enter Weight"
            android:importantForAutofill="no"
            android:gravity="center_horizontal"

            android:background="@drawable/rounded_edittext"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        tools:ignore="UselessParent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height : "
            android:textColor="@color/white"
            android:layout_marginLeft="45dp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <EditText
            android:id="@+id/EditTrainerHeight"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            tools:ignore="HardcodedText,RtlHardcoded,TextFields"
            android:hint="Enter Height"
            android:importantForAutofill="no"
            android:gravity="center_horizontal"

            android:background="@drawable/rounded_edittext"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        tools:ignore="UselessParent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age : "
            android:textColor="@color/white"
            android:layout_marginLeft="45dp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <EditText
            android:id="@+id/EditTrainerAge"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            tools:ignore="HardcodedText,RtlHardcoded,TextFields"
            android:hint="Enter Age"
            android:importantForAutofill="no"
            android:gravity="center_horizontal"

            android:background="@drawable/rounded_edittext"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        tools:ignore="UselessParent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password : "
            android:textColor="@color/white"
            android:layout_marginLeft="45dp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <EditText
            android:id="@+id/EditTrainerPassword"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            tools:ignore="HardcodedText,RtlHardcoded,TextFields"
            android:hint="Enter Password"
            android:importantForAutofill="no"
            android:gravity="center_horizontal"

            android:background="@drawable/rounded_edittext"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        tools:ignore="UselessParent"
        android:gravity="center">

        <Button
            android:id="@+id/BtnTrainerUploadImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Image"
            android:background="@drawable/rounded_button"
            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ImgLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        tools:ignore="UselessParent">


        <ImageView
            android:id="@+id/ShowImageView"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/textview"
            android:layout_marginTop="20dp"
            tools:ignore="ContentDescription" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <Button
            android:id="@+id/BtnAdTrainerSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Trainer"
            android:background="@drawable/rounded_button"/>


    </LinearLayout>

</LinearLayout>