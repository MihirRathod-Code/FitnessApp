<?xml version="1.0" encoding="utf-8"?>


<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackGroundColor"
    android:id="@+id/sigmup">

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackGroundColor"
    tools:context=".LoginSignUp.ActivitySignUp">

    <TextView
        android:id="@+id/bannerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="MuscleMonsters"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/SignUpFirstName"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="First Name"
        android:textColorHint="@color/white"
        android:inputType="textPersonName"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bannerName" />

    <EditText
        android:id="@+id/SignUpLastName"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Last Name"
        android:textColorHint="@color/white"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUpFirstName" />

    <EditText
        android:id="@+id/SignUpEmailId"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email Id"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:inputType="textEmailAddress"
        android:textSize="30sp"
        android:backgroundTint="@color/white"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUpLastName"
        />

    <EditText
        android:id="@+id/SignUpPhone"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Phone Number"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="30sp"
        android:backgroundTint="@color/white"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUpEmailId" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:paddingLeft="-15dp"
        android:hint="Enter Password"
        tools:ignore="MissingConstraints"
        android:id="@+id/SignUpPasswor"
        app:passwordToggleEnabled="true"
        app:boxStrokeColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:suffixTextColor="@color/white"
        app:prefixTextColor="@color/white"
        app:hintTextColor="@color/white"
        app:helperTextTextColor="@color/white"
        android:background="@color/BackGroundColor"
        android:textColorHint="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/SignUpPhone">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:id="@+id/SignUpPassword"
            android:textColorHint="@color/white"
            android:textStyle="bold"
            android:ems="10"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@color/BackGroundColor"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:paddingLeft="-15dp"
        android:hint="Enter Password"
        tools:ignore="MissingConstraints"
        android:id="@+id/SignUpConfirmPasswor"
        app:passwordToggleEnabled="true"
        app:boxStrokeColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:suffixTextColor="@color/white"
        app:prefixTextColor="@color/white"
        app:hintTextColor="@color/white"
        app:helperTextTextColor="@color/white"
        android:background="@color/BackGroundColor"
        android:textColorHint="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/SignUpPasswor">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:id="@+id/SignUpConfirmPassword"
            android:textColorHint="@color/white"
            android:textStyle="bold"
            android:ems="10"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@color/BackGroundColor"/>

    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/SignUpButtonSignUp"
        android:layout_width="314dp"
        android:layout_height="69dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_button_lo"
        android:backgroundTint="@color/white"
        android:text="Signup"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:textStyle="bold"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUpConfirmPasswor"
        app:layout_constraintVertical_bias="0.054" />

    <View
        android:id="@+id/v1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@id/SignUpButtonSignin"
        app:layout_constraintBottom_toBottomOf="@+id/SignUpButtonSignUp"
        tools:ignore="MissingConstraints"
        android:background="@color/white"/>

    <Button
        android:id="@+id/SignUpButtonSignin"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_button_lo"
        android:backgroundTint="@color/white"
        android:text="Sign in"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUpButtonSignUp"
        app:layout_constraintVertical_bias="0.054" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:ignore="MissingConstraints">
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_marginTop="650dp"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>