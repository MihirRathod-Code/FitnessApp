                android:layout_marginBottom="20dp">

                <ScrollView
                    android:id="@+id/SCROLLER_ID"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:clipToPadding="false"
                    android:fillViewport="true"
                    android:scrollbars="vertical">

